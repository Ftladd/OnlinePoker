<!DOCTYPE html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <link rel="stylesheet" href="/css/style.css">

    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/js/clientGame.js" defer></script>
  </head>
  <body class="gamePage">
    <div class="gameUI">
        <!-- Use ejs for all four player names -->
        <div class:"player">
          <%= room1.playerIds[0] %>
        </div>

        <div class="player">
          <%= room1.playerIds[1] %>
        </div>

        <div class="player">
          <%= room1.playerIds[2] %>
        </div>

        <div class="player">
          <%= room1.playerIds[3] %>
        </div>

        <!-- Make the buttons and give them ids -->
        <input id="raiseAmount" type="number" name="amount">
        <button id="raiseButton">Raise</button>

        <button id="foldButton">Fold</button>

        <button id="checkButton">Check/Call</button>

        <ul id="addRaise"></ul>
  </body>
</html>
